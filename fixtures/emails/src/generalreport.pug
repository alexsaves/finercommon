mixin comment(cmt)
  div(style="margin-bottom:1px;border-bottom:1px solid #eeeeee;padding-left:20px;padding-right:20px;background-color:rgba(244, 244, 244, 0.5);padding-top:20px;padding-bottom:20px;")
